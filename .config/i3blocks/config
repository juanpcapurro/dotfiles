# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[micmute]
command=~/.scripts/push2talk i3blocks
label=üéô
interval=60
signal=11
separator=true

[cmus]
command=~/.config/i3blocks/cmus-status
interval=10
signal=14
separator=true

[whatchadoin]
label=‚è∞
command=~/.scripts/watchadoin i3blocks
interval=60
signal=10

[btc2usd]
label=BTC:
command=curl -s http://api.coindesk.com/v1/bpi/currentprice.json |jq -r ".bpi.USD.rate" |grep -o '^[^.]*'
interval=600

[usd2ars]
label=U$:
command=w3m preciodolarblue.com.ar | grep Compra -A 1 |tail -n 1|cut -f 1 -d ' '
interval=600

[mail]
command=${HOME}/.config/i3blocks/mail
interval=90
separator=true
signal=12

[load_average]
interval=5
separator=false

[temperature]
interval=5
separator=false

[cpu_usage]
interval=5
separator=false

[memory]
interval=5

[battery]
interval=30

[time]
command=date +'%d/%m %R'
interval=60
