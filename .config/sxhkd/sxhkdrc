super+alt+b
  dm-tool lock
super+ctrl+b
  i3lock -i ~/.assets/images/plug.png -t -u ; xset dpms force off
super+b
  cmus-remote -U ; i3lock -i ~/.assets/images/plug.png -t -u ; xset dpms force off
super+shift+b
  cmus-remote -U ; i3lock -i ~/.assets/images/plug.png -t -u; loginctl suspend

super+w
  watchadoin
# push to talk
super+d
  push2talk toggle
super+r
  remapkeyboard

# launch regular programs
super+backslash ; {q, f, shift+f, p, e, t, c, i}
  {\
    qutebrowser,\
    firefox,\
    firefox --private-window,\
    pavucontrol,\
    dmenuunicode,\
    telegram-desktop,\
    urxvt -name urxvt-cmus -e cmus,\
    urxvt -name urxvt-irssi -e irssi\
  }

# launch memetic scripts
super+backslash ; {k, shift+k, b, s, shift+s, ctrl+s, alt+s, c}
  {\
    ~/.scripts/dmenu-keepassxc password,\
    ~/.scripts/dmenu-keepassxc,\
    feh -F ~/.assets/images/pitchblack.png ,\
    sleep 0.2 && rm ~/tmp_screenshot.png ; scrot -s ~/tmp_screenshot.png && xclip -selection clipboard -t image/png -i ~/tmp_screenshot.png ,\
    sleep 0.2 && rm ~/tmp_screenshot.png ; scrot -c -d 6 -s ~/tmp_screenshot.png && xclip -selection clipboard -t image/png -i ~/tmp_screenshot.png ,\
    sleep 0.2 && rm ~/tmp_screenshot.png ; scrot -s ~/tmp_screenshot.png && tesseract ~/tmp_screenshot.png stdout |xclip -selection clipboard ,\
    grabc | head --bytes=7 | xclip && notify-send $(xclip -o) ,\
    sleep $(echo "60*$(dmenu -p 'how many minutes?' </dev/null|| echo '0')"|bc) ; notify-send -u critical "TIMER DONE"\
  }

super+equal ; {a, m, shift+m }
  {\
    oneoffplayer ~/.assets/sounds/airhorn.mp3,\
    oneoffplayer ~/.assets/sounds/maestruli_short.mp3,\
    oneoffplayer ~/.assets/sounds/maestruli_long.mp3\
  }

super+shift+backslash ; {h, s}
  { loginctl hibernate, loginctl suspend }

XF86AudioPlay
  cmus-remote -u ; pkill -SIGRTMIN+14 dwmblocks
XF86AudioPause
  cmus-remote -u ; pkill -SIGRTMIN+14 dwmblocks
XF86AudioNext
  cmus-remote -n ; pkill -SIGRTMIN+14 dwmblocks
XF86AudioPrev
  cmus-remote -r ; pkill -SIGRTMIN+14 dwmblocks
XF86AudioLowerVolume
  volumectl volume-up
XF86AudioRaiseVolume
  volumectl volume-down

# TODO:
# - cmus playlists

super+BackSpace ; {space, m, d}
  {\
    cmus-remote -u ; pkill -SIGRTMIN+14 dwmblocks ,\
    volumectl mute-toggle,\
    echo "yes\nno"|dmenu -p "delete $(cmus-remote  -Q |grep file |cut -d ' ' -f 2-) ?" |grep "yes" && rm "$(cmus-remote  -Q |grep file |cut -d ' ' -f 2-)" && cmus-remote -n && pkill -SIGRTMIN+14 dwmblocks\
  }

super+{ bracketleft, bracketright, shift+bracketleft, shift+bracketright, alt+bracketleft, alt+bracketright }
  {\
    volumectl volume-down, volumectl volume-up,\
    cmus-remote -r ; pkill -SIGRTMIN+14 dwmblocks, cmus-remote -n ; pkill -SIGRTMIN+14 dwmblocks,\
    cmus-remote -k -10, cmus-remote -k +10\
  }

super+shift+BackSpace ; {a, h, c, d, f}
  headsetctl {a2dp, headset, connect, disconnect, fixdaemon}
