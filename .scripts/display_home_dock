#!/bin/sh

xrandr \
  --output DP-2 --off \
  --output DP-1 --off \
  --output DP-3 --off \
  --output HDMI-1 --off \
  --output HDMI-2 --primary --mode 1920x1080 --rotate normal \
  --output HDMI-3 --mode 1920x1080 --rotate normal --left-of HDMI-2 \
  --output LVDS-1 --off \
  --output VGA-1 --off \
  && notify-send "Docked!"|| notify-send "Unable to dock :("

xset s 0
xset dpms 0 0 0
xset dpms force on

