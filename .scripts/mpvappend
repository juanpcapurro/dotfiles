#!/bin/zsh

URL=${QUTE_URL}
SOCKET="${HOME}/.mpv/socket"

if [ -n "${VIDEO}" ] ; then
  lsof "${SOCKET}" || launch mpv --idle --ytdl-format="bestvideo[height<=?1080]+bestaudio/best" 
else
  lsof "${SOCKET}" || launch mpv --no-video --idle
fi

[ "$#" -eq 1 ] && URL="${1}"

while ! lsof "${SOCKET}"
do
  echo "waiting for mpv to start"
  sleep 1
done

if [ -n "${URL}" ] ; then
  mpvctl add "${URL}" \
  && notify-send "Added ${URL} to playlist"\
  || notify-send "Couldnt add ${URL} to playlist"
else
  exit 1
fi

